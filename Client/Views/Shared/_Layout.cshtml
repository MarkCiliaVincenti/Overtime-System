<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Client</title>
    <!-- Boostrap CSS only -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />

    <!-- Nucleo Icons -->
    <link href="~/lib/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/lib/css/nucleo-svg.css" rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="~/lib/css/nucleo-svg.css" rel="stylesheet" />

    <!-- Themes -->
    <link id="pagestyle" href="~/lib/css/argon-dashboard.css" rel="stylesheet" />

    <!-- User Import-->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Nav -->
    <nav class="navbar navbar-expand-lg position-absolute top-0 z-index-3 w-100 shadow-none my-3 navbar-transparent mt-4">
        <div class="container mx-auto">
            <a class="navbar-brand font-weight-bolder ms-lg-0 ms-3 text-white" asp-area="" asp-controller="Home" asp-action="Index">
                Overtime System
            </a>
        </div>
    </nav>

    <!-- Main -->
    <main class="main-content  mt-0">
        <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('https://raw.githubusercontent.com/creativetimofficial/public-assets/master/argon-dashboard-pro/assets/img/signup-cover.jpg'); background-position: top;">
            <span class="mask bg-gradient-dark opacity-6"></span>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5 text-center mx-auto">
                        <h1 class="text-white mb-2 mt-5">Welcome!</h1>
                        <p class="text-lead text-white">Before we let you in please sign in with your account.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer py-5">
        <div class="container">
            <div class="col-8 mx-auto text-center mt-1">
                <p class="mb-0 text-secondary">
                    Copyright ©
                    <script>
                        document.write(new Date().getFullYear())
                    </script> Soft by Creative Tim.
                </p>
            </div>
        </div>
    </footer>

    <!-- JQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>

    <!-- JavaScript Bundle with Popper -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>

    <!-- Core JS File -->
    <script src="~/lib/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/lib/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="~/lib/js/argon-dashboard.min.js"></script>

    <!-- Sweet Alert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.6/dist/sweetalert2.all.min.js"></script>

    <!-- JQuery Validation -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>

    <!-- User Import-->
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
