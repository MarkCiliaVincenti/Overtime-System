                                <span class="d-sm-inline d-none" id="LogOut">LogOut</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="container-fluid py-12">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header pb-0">
                            <h6 style="display: inline-block">Overtime Employees Table</h6>
                        </div>
                        <div class="card-body px-0 pt-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0" id="tblOvertime">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nik</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Submit</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Total</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Paid</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>

                                        </tr>
                                    </thead>
                                    <tbody id="employee"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- modal detail overtime -->
    <div class="modal fade" id="modalDetail" tabindex="-1" role="dialog" aria-labelledby="modalDetail" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalDetail">Request Overtime</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="tab-pane" id="tab-form" role="tabpanel">
                        <div class="card-body">
                            <div class="row">
                                <!-- Column -->
                                <div class="col-lg-12 col-xlg-12 col-md-12">
                                    <div class="card">
                                        <div class="tab-content">
                                            <div id="bagian-form">
                                                <form class="m-t-10" id="form-isian">
                                                    <div class="row">
                                                        <div class="row">
                                                            <div class="form-group col-md-6">
                                                                <label class="form-group-float-label is-visible">NIK</label>
                                                                <input type="text" id="nik" class="form-control" disabled>
                                                            </div>
                                                            <div class="form-group col-md-6">
                                                                <label class="form-group-float-label is-visible">Full Name</label>
                                                                <input type="text" id="fullName" class="form-control" disabled>
                                                            </div>
                                                            <div class="form-group col-md-6">
                                                                <label class="form-group-float-label is-visible">Submit Date</label>
                                                                <input class="form-control" id="submitDate" type="text" disabled>
                                                            </div>
                                                            <div class="form-group col-md-6">
                                                                <label class="form-group-float-label is-visible">Salary</label>
                                                                <input class="form-control" id="salary" type="number" disabled>
                                                            </div>
                                                            <div class="form-group col-md-12">
                                                                <label class="form-group-float-label is-visible">Paid</label>
                                                                <input type="number" id="paid" class="form-control" disabled>
                                                            </div>
                                                            <div class="form-group col-md-12">
                                                                <label class="form-group-float-label is-visible">Type</label>
                                                                @*<input type="text" id="paid" class="form-control">*@
                                                                <select class="form-control" id="type" disabled>
                                                                    <option value="0">WeekDay</option>
                                                                    <option value="1">Weekend</option>
                                                                </select>
                                                            </div>

                                                        </div>
                                                        <div class="table-responsive">
                                                            <table class="table table-single-select datatable-pagination" id="tblDetail" width="100%">
                                                                <thead>
                                                                    <tr class="align-middle text-center">
                                                                        <th>Start Overtime</th>
                                                                        <th>End Overtime</th>
                                                                        <th>Description</th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody id="dataOvertimes">
                                                                    <tr class="align-middle text-center">
                                                                        <td>1</td>
                                                                        <td>2022001</td>
                                                                        <td>hanif</td>
                                                                    </tr>
                                                                    <tr class="align-middle text-center">
                                                                        <td>1</td>
                                                                        <td>2022002</td>
                                                                        <td>achmad</td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>

                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Column -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="approvalManager">Approve</button>
                    <button type="button" class="btn btn-danger" id="rejected">Reject</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
